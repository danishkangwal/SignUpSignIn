<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.danish.SignInSignUp.SignIn"
    tools:ignore="ExtraText">

    <FrameLayout
        android:layout_width="450dp"
        android:layout_height="300dp"
        >
        <ImageView
            android:id="@+id/imageView"
            android:background="@drawable/top_intro_background"
            android:layout_width="450dp"
            android:layout_height="300dp"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="30dp"
            android:text="Welcome, Sign In to continue"
            />

    </FrameLayout>







    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_gravity="center"
        app:boxStrokeColor="@color/yellow"
        app:hintTextColor="@color/yellow"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:startIconDrawable="@drawable/baseline_person_24"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/yellow"
            android:id="@+id/usernameEt"

            android:hint="Enter your username" />

    </com.google.android.material.textfield.TextInputLayout>


    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="I agree to all T&amp;C" />

    <Button
        android:id="@+id/btSignIn"
        android:layout_width="150dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:backgroundTint="#0C49E4"
        android:layout_height="wrap_content"
        android:text="SIGN IN" />

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:background="@drawable/bottom_intro_background"
        />


</LinearLayout>